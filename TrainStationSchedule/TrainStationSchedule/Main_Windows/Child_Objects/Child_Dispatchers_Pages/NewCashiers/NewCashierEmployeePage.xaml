<Page x:Class="TrainStationSchedule.Main_Windows.Child_Objects.Child_Dispatchers_Pages.NewCashiers.NewCashierEmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrainStationSchedule.Main_Windows.Child_Objects.Child_Dispatchers_Pages.NewCashiers"
      mc:Ignorable="d" 
      d:DesignHeight="651" d:DesignWidth="1024"
      Title="NewCashierEmployeePage">

    <Border Background="#f1f4fb" Margin="5" CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="33"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1">
                <Label Foreground="#89a3c6" FontSize="19" Content="Добавление нового кассира" Margin="10"/>
                <Label Content="Фамилия*" Margin="0,0,0,10"/>
                <TextBox x:Name="CashierSurNameBox" Width="200"  Margin="0,0,0,10"/>
                <Label Content="Имя*:" Margin="0,0,0,10"/>
                <TextBox x:Name="CashierNameBox" Width="200"  Margin="0,0,0,10"/>
                <Label Content="Отчество" Margin="0,0,0,10"/>
                <TextBox x:Name="CashierPatronymicBox" Width="200"  Margin="0,0,0,20"/>
                <Label Content="Логин* (мин. 5 символов):" Margin="0,0,0,10"/>
                <TextBox x:Name="InputLoginBox" Width="200"  Margin="0,0,0,10"/>
                <Label Content="Пароль* (мин. 8 символов):" Margin="0,0,0,10"/>
                <PasswordBox x:Name="InputPasswordBox" Width="200"  Margin="0,0,0,30"/>
                <Button Style="{StaticResource GreenBtn}" Content="Добавить кассира" Width="150" Height="30" Click="AddCashierButton_Click"/>
                <Label Content="или:" Margin="10"/>
                <Button Style="{StaticResource GreenBtn}" Content="Удалить кассира" Click="RemoveCashierButton_Click"  FontSize="12" Width="130" Height="30" />
            </StackPanel>
      

        </Grid>
    </Border>
</Page>
