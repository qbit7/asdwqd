<Window x:Class="TrainStationSchedule.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainStationSchedule"
        mc:Ignorable="d"
        ResizeMode="NoResize" 
        Icon="src/img/logo/speed-train-logo.jpg"
        WindowStartupLocation="CenterScreen"
        Title="SwiftExchange"  
        Height="500" Width="450">
    <Grid Background="#f1f4fb">
        <StackPanel Orientation="Vertical">
            <Label FontSize="18" Content="Вход в систему"/>
            <Label HorizontalAlignment="Left" FontSize="15" Content="Логин" Margin="0,15,0,0"/>
            <TextBox x:Name="LoginBox" Height="35" Width="250"/>
            <Label HorizontalAlignment="Left" FontSize="15" Content="Пароль" Margin="0,25,0,0"/>
            <PasswordBox x:Name="PasswordBox" Height="35" Width="250"/>
            <Button Style="{StaticResource GreenBtn}" Height="35" Width="95" Content="Войти" Margin="0,35,0,0" Click="LogInButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
