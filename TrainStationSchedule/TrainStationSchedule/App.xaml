<Application x:Class="TrainStationSchedule.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TrainStationSchedule"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!--Основной стиль для текстового поля-->
        <Style TargetType="TextBox">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="/TrainStationSchedule;component/src/fonts/#Rubik"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="9"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="OuterBorder"
                            CornerRadius="10"
                        Background="Transparent"
                        SnapsToDevicePixels="True"
                        Margin="0">
                            <Border.Effect>
                                <DropShadowEffect
                            Color="Black"
                            BlurRadius="15"
                            ShadowDepth="0"
                            Direction="270"
                            Opacity="0.25"/>
                            </Border.Effect>
                            <Border
                        Background="{TemplateBinding Background}"
                        CornerRadius="10"
                        BorderThickness="0">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="OuterBorder" Property="Margin" Value="-1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBox" x:Key="Combo">
            <Setter Property="FontFamily" Value="/TrainStationSchedule;component/src/fonts/#Rubik"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="9"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="OuterBorder"
                            Background="Transparent"
                            CornerRadius="10"
                            SnapsToDevicePixels="True">
                                <Border.Effect>
                                    <DropShadowEffect
                                Color="Black"
                                BlurRadius="15"
                                ShadowDepth="0"
                                Direction="270"
                                Opacity="0.25"/>
                                </Border.Effect>
                                <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                    <DockPanel Margin="0">
                                        <ToggleButton x:Name="ToggleButton"
                                              DockPanel.Dock="Right"
                                              Focusable="False"
                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                              ClickMode="Press"
                                              Background="Transparent"
                                              BorderThickness="0">
                                            <Path HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Fill="Gray"
                                          Data="M 0 0 L 4 4 L 8 0 Z"/>
                                        </ToggleButton>
                                        <ContentPresenter x:Name="ContentSite"
                                                  Margin="6,0,0,0"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                  IsHitTestVisible="False"/>
                                    </DockPanel>
                                </Border>
                            </Border>
                            <Popup x:Name="PART_Popup"
                           Placement="Bottom"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           Focusable="False"
                           PopupAnimation="Slide">
                                <Grid MaxHeight="200"
                              MinWidth="{TemplateBinding ActualWidth}"
                              SnapsToDevicePixels="True">
                                    <Border Background="White"
                                    CornerRadius="10"
                                    Margin="0,4,0,0"
                                    SnapsToDevicePixels="True">
                                        <ScrollViewer Margin="4">
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="OuterBorder" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <!--Основной стиль для поля с паролем-->
        <Style TargetType="PasswordBox">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="/TrainStationSchedule;component/src/fonts/#Rubik"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="OuterBorder"
                            CornerRadius="10"
                        Background="Transparent"
                        SnapsToDevicePixels="True"
                        Margin="0">
                            <Border.Effect>
                                <DropShadowEffect
                            Color="Black"
                            BlurRadius="15"
                            ShadowDepth="0"
                            Direction="270"
                            Opacity="0.25"/>
                            </Border.Effect>
                            <Border
                        Background="{TemplateBinding Background}"
                        CornerRadius="10"
                        BorderThickness="0">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="OuterBorder" Property="Margin" Value="-1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--Основной стиль для текстовых надписей-->
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="/TrainStationSchedule;component/src/fonts/#Rubik"/>
        </Style>
        <!--Стиль StackPanel-->
        <Style TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <!--Стиль для кнопки с кастомным размером-->
        <Style TargetType="DatePicker">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <!--Стиль для кнопки с кастомным размером-->
        <Style x:Key="UserBtnCustom" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="/SWIFT_EXCHANGE;component/src/fonts/#Rubik"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="userBtnBorder"
                        Background="White" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" CornerRadius="5">
                            <Border.Effect>
                                <DropShadowEffect x:Name="userBtnEffects"
                                          Color="Black"
                                          BlurRadius="0"
                                          ShadowDepth="0"
                                          Direction="270"
                                          Opacity="0.25"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="userBtnEffects"
                                                 Storyboard.TargetProperty="BlurRadius"
                                                 To="6"
                                                 Duration="0:0:0.01"
                                                 BeginTime="0:0:0.01"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="userBtnEffects"
                                                 Storyboard.TargetProperty="BlurRadius"
                                                 To="0"
                                                 Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="userBtnBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black"
                                                  BlurRadius="15"
                                                  ShadowDepth="0"
                                                  Direction="270"
                                                  Opacity="0.25"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--Стиль для кнопки в личном кабинете-->
        <Style x:Key="UserBtn" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="/TrainStationSchedule;component/src/fonts/#Rubik"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="userBtnBorder"
                        Background="White" Width="162" Height="50" CornerRadius="5">
                            <Border.Effect>
                                <DropShadowEffect x:Name="userBtnEffects"
                                          Color="Black"
                                          BlurRadius="0"
                                          ShadowDepth="0"
                                          Direction="270"
                                          Opacity="0.25"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="userBtnEffects"
                                                 Storyboard.TargetProperty="BlurRadius"
                                                 To="6"
                                                 Duration="0:0:0.01"
                                                 BeginTime="0:0:0.01"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="userBtnEffects"
                                                 Storyboard.TargetProperty="BlurRadius"
                                                 To="0"
                                                 Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="userBtnBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black"
                                                  BlurRadius="15"
                                                  ShadowDepth="0"
                                                  Direction="270"
                                                  Opacity="0.25"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--Кнопка ЗЕЛЁНАЯ-->
        <Style x:Key="GreenBtn" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="/TrainStationSchedule;component/src/fonts/#Rubik"/>
            <Setter x:Name="ButtonForeground" Property="Foreground" Value="#FF7C9355"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                        CornerRadius="10"
                        BorderThickness="1"
                        BorderBrush="#FF7C9355"
                        Background="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#9bc256"/>
                                <Setter Property="Foreground" Value="#fbfffa"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#9bc256"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Margin" Value="+1"/>
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#668f1f"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
